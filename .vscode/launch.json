{
  "version": "0.2.0",
  "configurations": [
    {
      "type": "pwa-node",
      "request": "launch",
      "name": "Jest Tests",
      "program": "${workspaceFolder}/node_modules/jest/bin/jest.js",
      "args": [
        "--runInBand", 
        "./lib/tests/tree/remove.spec.ts",
        "-c", "jest.config.ts"
      ],
      "cwd": "${workspaceFolder}",
      "console": "integratedTerminal",
      "disableOptimisticBPs": true,
      "envFile": ".env.test",
      "runtimeArgs": ["--inspect-brk"]
    },
    {
      "type": "pwa-node",
      "request": "attach",
      "name": "Attach to server",
      "mode": "remote",
      "port": 9229,
      "address": "localhost",
      "remoteRoot": "/home/node/app/",
      "localRoot": "${workspaceFolder}",
      "outDir": ["${workspaceFolder}/dist"],
      "cwd": "${workspaceFolder}",
      "restart": true,
      "sourceMaps": true,
      "trace": true
    }
  ]
}
