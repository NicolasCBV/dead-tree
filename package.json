{
  "name": "tree",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "build": "tsc -p . --noEmit && swc ./lib --config-file ./.swcrc.json -d ./dist",
    "format": "prettier --write",
    "lint": "eslint lib",
    "lint:fix": "eslint --fix",
    "prepare": "husky",
    "pre-commit": "lint-staged --allow-empty",
    "commit": "cz",
    "test": "jest -c jest.config.ts"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "lint-staged": {
    "lib/**/*.(tsx|jsx|ts|js)": [
      "pnpm format",
      "pnpm lint:fix"
    ]
  },
  "devDependencies": {
    "@commitlint/config-conventional": "^19.2.2",
    "@eslint/js": "^9.9.0",
    "@swc/cli": "^0.4.0",
    "@swc/core": "^1.7.11",
    "@types/jest": "^29.5.12",
    "commitizen": "^4.3.0",
    "commitlint": "^19.4.0",
    "cz-conventional-changelog": "^3.3.0",
    "eslint": "^9.9.0",
    "globals": "^15.9.0",
    "husky": "^9.1.4",
    "jest": "^29.7.0",
    "lint-staged": "^15.2.9",
    "prettier": "^3.3.3",
    "ts-jest": "^29.2.4",
    "ts-node": "^10.9.2",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.5.4",
    "typescript-eslint": "^8.1.0"
  }
}
